<Window x:Class="_30_WeatherDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_30_WeatherDisplay"
        mc:Ignorable="d"
        Title="Current Temperature" Height="420" Width="680" MinHeight="420" MinWidth="680" FontSize="30" Background="WhiteSmoke"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="{Binding CurrentTemperature}" Margin="50,50,50,50" FontSize="200" HorizontalAlignment="Center"/>
    </Grid>
</Window>
