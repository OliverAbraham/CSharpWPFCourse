<Window x:Class="_17_Secret_conversation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_Secret_conversation"
        mc:Ignorable="d"
        Title="17_Secret_conversation" Height="450" Width="800" FontSize="14" Background="FloralWhite">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>

        <GridSplitter HorizontalAlignment="Stretch" Height="13" Grid.Row="1" VerticalAlignment="Top" ResizeDirection="Rows" Background="#FFB0E7F3"/>
        
        <Grid Grid.Row="0">
            <TextBox Name="TextboxTop" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Text="" TextChanged="Textbox_Top_TextChanged" IsManipulationEnabled="True"/>
        </Grid>
        
        <Grid Grid.Row="1" Margin="0,13,0,0">
            <TextBox Name="TextboxBottom" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Text="" TextChanged="Textbox_Bottom_TextChanged"/>
        </Grid>
    </Grid>
</Window>
